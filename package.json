{
  "name": "upscaled-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.upscaled.app",
    "productName": "Upscaled",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**",
      "src/assets/**",
      "package.json"
    ],
    "icon": "src/assets/upscaled.png",
    "extraResources": [
      {
        "from": "app.py",
        "to": "backend/app.py"
      },
      {
        "from": "generator.py",
        "to": "backend/generator.py"
      },
      {
        "from": "upscaler.py",
        "to": "backend/upscaler.py"
      },
      {
        "from": "generator.pth",
        "to": "backend/generator.pth"
      }
    ]
  }
}
